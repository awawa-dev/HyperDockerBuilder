ARG DOCKER_SOURCE
FROM ${DOCKER_SOURCE}
ARG DOCKER_SOURCE
RUN echo "DOCKER_SOURCE is: ${DOCKER_SOURCE}"

# install hyperhdr deps packages
RUN apt update
RUN apt upgrade -y

RUN apt --assume-yes install \
    build-essential \
    cmake \
    flatbuffers-compiler \
    git \
    libasound2-dev \
    libayatana-appindicator3-dev \
    libegl-dev \
    libflatbuffers-dev \
    libftdi1-dev \
    libgl-dev \
    libglvnd-dev \
    libgtk-3-dev \
    liblzma-dev \
    libpipewire-0.3-dev \
    libssl-dev \
    libsystemd-dev \
    libturbojpeg0-dev \
    libusb-1.0-0-dev \
    libx11-dev \
    libzstd-dev \
    ninja-build \
    patchelf \
    pkg-config \
    python3 \
    unzip \
    wget

RUN apt --assume-yes install libcec-dev libp8-platform-dev || true

RUN mkdir -p /scripts
COPY build.sh /scripts
WORKDIR /scripts
RUN chmod +x /scripts/build.sh
RUN /scripts/build.sh

